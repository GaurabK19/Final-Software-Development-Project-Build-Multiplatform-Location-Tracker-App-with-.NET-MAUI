<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:maps="clr-namespace:Microsoft.Maui.Controls.Maps;assembly=Microsoft.Maui.Controls.Maps"
    x:Class="Location_Tracker.MainPage"
    Title="Location Tracker">

    <VerticalStackLayout Spacing="10" Padding="10">

        <!-- MAP CONTROL -->
        <maps:Map x:Name="MainMap"
                  HeightRequest="400"
                  MapType="Street" />

        <!-- BUTTONS -->
        <Button Text="Start Tracking" 
                Clicked="OnStartTrackingClicked"
                BackgroundColor="#4CAF50"
                TextColor="White"/>

        <Button Text="Stop Tracking"
                Clicked="OnStopTrackingClicked"
                BackgroundColor="#F44336"
                TextColor="White"/>

        <Button Text="Refresh Heatmap"
                Clicked="OnRefreshHeatmapClicked"
                BackgroundColor="#2196F3"
                TextColor="White"/>

        <Button Text="Clear Data"
                Clicked="OnClearDataClicked"
                BackgroundColor="#9C27B0"
                TextColor="White"/>

    </VerticalStackLayout>

</ContentPage>